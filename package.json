{
	"name": "@cipscis/base-package",
	"version": "0.1.0",
	"description": "This is my base project to use when creating new packages.",
	"private": true,
	"browser": "./dist/main-export.js",
	"type": "module",
	"files": [
		"dist/**/*"
	],
	"types": "dist/main-export.d.ts",
	"scripts": {
		"server": "node server/server.js",
		"build": "gulp build",
		"watch": "gulp",

		"lintJs": "eslint src/**",
		"lintCss": "stylelint docs/assets/scss/**/*.scss",
		"lint": "npm run lintJs && npm run lintCss",

		"start": "concurrently --kill-others \"npm run server\" \"npm run watch\"",
		"test": "npm run lint && tsc && jasmine",
		"prepare": "gulp clean && npm test"
	},
	"author": "Mark Hanna",
	"repository": {
		"type": "git",
		"url": "https://github.com/cipscis/base-package.git"
	},
	"license": "Hippocratic-2.1",
	"devDependencies": {
		"@types/jasmine": "^3.8.2",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"concurrently": "^6.2.1",
		"dotenv": "^10.0.0",
		"eslint": "^8.13.0",
		"express": "^4.17.1",
		"gulp": "^4.0.2",
		"gulp-sass": "^5.0.0",
		"jasmine": "^3.9.0",
		"resolve-typescript-plugin": "^1.1.0",
		"sass": "^1.39.0",
		"stylelint": "^14.7.0",
		"stylelint-config-recommended-scss": "^6.0.0",
		"ts-loader": "^9.2.5",
		"typescript": "^4.5.2",
		"webpack": "^5.52.0"
	},
	"engines": {
		"node": ">=14"
	}
}
